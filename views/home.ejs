<html>
  <head>
    <title>Joblify - Fullstack Lab</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>
      <a href="/"><img src="/images/logo.png" alt="Logo do Joblify"/></a>
    </h1>
    <p>We are joblify! Join us!</p>
    <!-- End of header -->

    <h2>Open roles:</h2>
    <% categorias.forEach(categoria => { %>
    <div>
      <h3><%- categoria.categoria %></h3>
      <ul>
        <% categoria.vagas.forEach (vaga => { %>
        <li><a href="/vaga/<%- vaga.id %>"><%- vaga.titulo %></a></li>
        <% })%>
      </ul>
    </div>
    <%}) %>

    <!-- footer -->
    <p>Developed by: RomLuc</p>
  </body>
</html>
