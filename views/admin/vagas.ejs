<html>
  <head>
    <title>Joblify - Fullstack Lab</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>
      <a href="/"><img src="/images/logo.png" alt="Logo do Joblify"/></a>
    </h1>
    <p>We are joblify! Join us!</p>
    <!-- End of header -->

    <h2>
      Admin vagas:
      <a href="/admin/vagas/nova">Nova vaga</a>
    </h2>
    <div>
      <ul>
        <% vagas.forEach (vaga => { %>
        <li>
          <%- vaga.titulo %> |
          <a href="/admin/vagas/delete/<%- vaga.id %>">Excluir</a>
        </li>
        <% }) %>
      </ul>
    </div>

    <!-- footer -->
    <p>Developed by: RomLuc</p>
  </body>
</html>
